<h1><%= "#{@shelter.name} Available Pets!" %></h1>

<% @pets.each do |pet| %>
  <h2><%= pet.name %></h2>
    <%= image_tag pet.image, alt: "Photo of #{pet.name}", title: "Photo of #{pet.name}" %>
    <p>Age: <%= pet.age %></p>
    <p>Sex: <%= pet.sex %></p>
    <p>Adoption Status: <%= pet.status %></p>
    <p>Shelter: <%= pet.shelter.name %></p>
    <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %></p>
<% end %>

<h3>Put a pet up for adoption</h3>
<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
